<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="32dp"
    android:fitsSystemWindows="true">

    <!-- TB Logo -->
    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="TB"
        android:textColor="@color/blue_primary"
        android:textSize="48sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Tell Us About Yourself"
        android:textColor="@color/white"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvLogo" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Your info helps us create the perfect plan for you."
        android:textColor="#B3FFFFFF"
        android:textSize="16sp"
        android:textAlignment="center"
        android:fontFamily="sans-serif"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

    <!-- Gender Selection Row -->
    <LinearLayout
        android:id="@+id/genderLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubtitle">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMale"
            style="@style/Widget.Material3.Button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:text="Male"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal"
            app:backgroundTint="@color/blue_primary"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_male"
            app:iconGravity="top"
            app:iconPadding="8dp"
            app:iconSize="24dp"
            app:iconTint="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFemale"
            style="@style/Widget.Material3.Button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_marginEnd="12dp"
            android:text="Female"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal"
            app:backgroundTint="#2A2A2A"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_female"
            app:iconGravity="top"
            app:iconPadding="8dp"
            app:iconSize="24dp"
            app:iconTint="#B3FFFFFF" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOther"
            style="@style/Widget.Material3.Button"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="Other"
            android:textColor="#B3FFFFFF"
            android:textSize="14sp"
            android:textStyle="normal"
            app:backgroundTint="#2A2A2A"
            app:cornerRadius="16dp"
            app:icon="@drawable/ic_person"
            app:iconGravity="top"
            app:iconPadding="8dp"
            app:iconSize="24dp"
            app:iconTint="#B3FFFFFF" />

    </LinearLayout>

    <!-- Height Input Container -->
    <LinearLayout
        android:id="@+id/heightContainer"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/input_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/genderLayout">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_height"
            android:layout_marginEnd="16dp"
            app:tint="@color/blue_primary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Height (cm)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etHeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Enter your height"
                android:textColorHint="#66FFFFFF"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:inputType="number"
                android:padding="0dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Weight Input Container -->
    <LinearLayout
        android:id="@+id/weightContainer"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heightContainer">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_weight"
            android:layout_marginEnd="16dp"
            app:tint="@color/blue_primary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Weight (kg)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etWeight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Enter your weight"
                android:textColorHint="#66FFFFFF"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:inputType="number"
                android:padding="0dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Age Input Container -->
    <LinearLayout
        android:id="@+id/ageContainer"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_background"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightContainer">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_calendar"
            android:layout_marginEnd="16dp"
            app:tint="@color/blue_primary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age (yrs)"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="normal" />

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Enter your age"
                android:textColorHint="#66FFFFFF"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:inputType="number"
                android:padding="0dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Privacy Notice -->
    <TextView
        android:id="@+id/tvPrivacyNotice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="*Your data is private and only used to personalize your BodyTune experience."
        android:textColor="@color/blue_primary"
        android:textSize="12sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ageContainer" />

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_marginTop="32dp"
        android:text="Continue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue_primary"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPrivacyNotice" />

    <!-- Skip Button -->
    <TextView
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:text="Skip for now"
        android:textColor="#B3FFFFFF"
        android:textSize="16sp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnContinue" />

</androidx.constraintlayout.widget.ConstraintLayout>
